{
    "manifest_version": 3,
    "name": "Downloader Moodle Corsi UniTN",
    "version": "1.0",
    "description": "Estensione per scaricare i materiali dei corsi da didatticaonline.unitn.it per studenti UniTN",
    "permissions": ["downloads", "activeTab", "scripting"],
    "host_permissions": ["https://didatticaonline.unitn.it/*"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://didatticaonline.unitn.it/*"],
            "js": ["lib/axios.min.js", "lib/jszip.min.js", "content.js"]
        }
    ]
}
